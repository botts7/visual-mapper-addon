{
  "name": "visual-mapper",
  "version": "0.0.6",
  "description": "Home Assistant Addon for Android Device Monitoring & Automation",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "www/js/modules/**/*.js",
      "!www/js/modules/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "keywords": [
    "home-assistant",
    "android",
    "adb",
    "mqtt",
    "automation"
  ],
  "author": "Visual Mapper Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
